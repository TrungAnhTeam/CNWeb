@using MTATOEIc.Models.EF
@{
    ViewBag.Title = "chitiet";

    ProfileTA ct = ViewBag.ct ;
    Account role = ViewBag.role;

    string links, chucvu;
    int s1, s2, s3;
}




<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="~/Content/quantrivien.css">
    <link rel="stylesheet" href="~/Content/Profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/bootstrap/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>

    <input type="checkbox" id="check">
    <!--header area start-->
    <header class="maunen">
        <label for="check">
            <i class="fas fa-bars" id="sidebar_btn"></i>
        </label>
        <div class="left_area ">
            <h3>MTA <span>TOEIC</span></h3>
        </div>
        <div class="right_area ">
            <a href="LoginAdmin.html" class="logout_btn">Đăng xuất</a>
        </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <img src="1.png" class="mobile_profile_image" alt="">
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a href="/Admin/Member/Member"><i class="fas fa-desktop"></i><span>Thành viên</span></a>
            <a href="/Admin/quantrivien/quantrivien"><i class="fas fa-cogs"></i><span>Quản trị viên</span></a>

        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">
            <img src="~/images/Admin/Logonhom.png" class="profile_image" alt="">
            <h4>Nhóm MTA</h4>
        </div>
        <a href="/Admin/Member/Member"><i class="fas fa-desktop"></i><span>Thành viên</span></a>
        <a href="/Admin/quantrivien/quantrivien"><i class="fas fa-cogs"></i><span>Quản trị viên</span></a>
    </div>
    <!--sidebar end-->

    <div class="content">

        <div class="container">
            <div class="main-body">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                      
                           @if (role.Role_iD_FK == 1)
                           {
                                links = "quantrivien";
                           }else
                           {
                                links = "Member";
                           }

                       
                        <li class="breadcrumb-item"><a href="/Admin/@links/@links">List</a>
                        
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@role.Username</li>
                    </ol>
                </nav>
                <!-- /Breadcrumb -->

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3" style="min-height:100px;">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="162">
                                    <div class="mt-3">
                                        <h4>@role.Username</h4>
                                        @if(@role.Role_iD_FK==1){
                                                <p class="text-secondary mb-1">Admin</p>
                                        }else{<p class="text-secondary mb-1">Member</p> }
                                        
                                        
                                        
                                        <button class="btn btn-outline-primary">Update</button>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3" style="min-height : 211px; padding : 10px 10px 10px 10px; text-align: justify">
                            <i class="material-icons text-info mr-2">Introduce</i>
                            @ct.Pro_Intro

                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ct.Pro_FullName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ct.Pro_Email
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ct.Pro_Phone
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Create Date</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ct.Pro_CreateDate
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ct.Pro_Address
                                    </div>
                                </div>
                                <hr>
                                @if (role.Role_iD_FK == 1)
                                {
                                    chucvu = "Admin";
                                }
                                else
                                { chucvu = "Member"; }

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Role</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @chucvu
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (role.Role_iD_FK == 2)
                                {
                                    s1 = role.Vocabulary;
                                    s2 = role.Grammar;
                                    s3 = role.Listen;
                            <div class="row gutters-sm">

                                <div class="col-sm-12 " style="margin-left:8px; padding-right:22px; ">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Skill</i>Project Status</h6>
                                            <small>Vocabulary</small>
                                            <div class="progress mb-3" style="height: 5px">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @s1%" aria-valuenow="@s1" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <small>Grammar</small>
                                            <div class="progress mb-3" style="height: 5px">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @s2%" aria-valuenow="@s2" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <small>Listen</small>
                                            <div class="progress mb-3" style="height: 5px">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @s3%" aria-valuenow="@s3" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>

        





    </div>

    <script type="text/javascript">
    $(document).ready(function(){
      $('.nav_btn').click(function(){
        $('.mobile_nav_items').toggleClass('active');
                            });
                        });
    </script>

</body>
</html>




